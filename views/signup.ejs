<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    
    <style>
        .body{
            background-image: url('/images/bg.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
        }
        .container {
            animation: fadeInDown 0.5s;
            background-color: #f8f9fa; /* Light gray background */
            padding: 20px;
            border-radius: 10px;
            max-width: 1200px; /* Adjust the maximum width as needed */
            margin: 0 auto; /* Center the container horizontally */
            box-shadow: 0 2px 4px rgb(6, 183, 183);
            margin-top: 3%;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="password"],
        input[type="date"],
        input[type="tel"],
        input[type="email"],
        button[type="submit"],
        select {
            width: 100%;
            background-color: #fff; /* White background */
            color: #000; /* Black text color */
            border: 1px solid #ccc; /* Light gray border */
            padding: 12px;
            margin: 10px 0;
            border-radius: 5px;
            box-sizing: border-box; /* Include padding and border in width calculation */
        }

        input::placeholder {
            color: #999; /* Light gray placeholder text */
        }

        button[type="submit"] {
            cursor: pointer;
            background-color: rgb(6, 183, 183); /* Custom color */
            color: #fff; /* White text color */
            border: none;
        }

        button[type="submit"]:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        /* Animation */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group {
            display: flex;
            margin-bottom: 10px;
        }

        .form-group input,
        .form-group select {
            flex: 1;
            margin-right: 10px;
        }

        /* Add media query for responsiveness */
        @media (max-width: 600px) {
            .form-group {
                flex-direction: column;
            }
        }

        input[type="date"]::placeholder {
            color: #aaa;
        }

        .form-group select {
            flex: 1;
            margin-right: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        /* Style the disabled option */
        .form-group select option:disabled {
            color: #aaa;
        }

        .success-message {
            color: green;
            font-weight: bold;
        }
    </style>
</head>

<body>
<div class="container">
    <h2>SIGNUP AS A DONAR</h2>
    <!-- Any error message display -->
    <form id="regForm" action="/reg_submit1" method="post" onsubmit="return validateForm()">
        <div class="form-group">
            <input type="text" id="fname" name="fname" placeholder="First Name" required>
            <input type="text" id="lname" name="lname" placeholder="Last Name" required>
        </div>
        <div class="form-group">
            <input type="text" id="mname" name="mname" placeholder="Middle Name">
            <input type="date" id="dob" name="dob" value="2000-01-01" class="placeholder" required>
        </div>
        <div class="form-group">
            <input type="tel" id="phoneNumber" name="mobileno" placeholder="Phone Number" required>
            <select id="blood_group" name="blood_group" required>
                <option value="" selected disabled>Select Blood Group</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
            </select>
            
        </div>
        <div class="form-group">
            <input type="text" id="nationality" name="nationality" placeholder="Nationality (Indian Only)"
                   required pattern="Indian">
            <input type="email" id="email" name="email" placeholder="Email" required>
        </div>
       
        <div class="form-group">
            <input type="password" id="password" name="pass" placeholder="Password" required>
        </div>
        <button type="submit">Signup</button>
    </form>
    <div class="not-signup">
        <p style="text-align: center;">Already have an account? <a href="/login">Login here</a></p>
    </div>
</div>
<script>
    function validateForm() {
        var dob = document.getElementById("dob").value;
        var today = new Date();
        var birthDate = new Date(dob);
        var age = today.getFullYear() - birthDate.getFullYear();
        var m = today.getMonth() - birthDate.getMonth();
        if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
            age--;
        }
        if (age < 18) {
            alert("You must be at least 18 years old to register.");
            return false; // Prevent form submission
        }
        setTimeout(() => {
            window.location.href = '/';
        }, 1000); // Redirect after 1 second (adjust as needed)
        return true; // Change to false if you want to prevent form submission
    }
</script>
</body>

</html>
